{
  "name": "server-monitor",
  "version": "3.2.0",
  "description": "Мониторинг игровых серверов",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder --publish=never",
    "build-win": "electron-builder --win --x64 --publish=never",
    "build-win-clean": "npm run clean && electron-builder --win --x64 --publish=never",
    "build-mac": "electron-builder --mac --publish=never",
    "build-linux": "electron-builder --linux --publish=never",
    "clean": "rm -rf dist node_modules && npm cache clean --force",
    "dist": "npm run build-win-clean",
    "check-versions": "node check-versions.js"
  },
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0"
  },
  "dependencies": {
    "gamedig": "^4.0.0",
    "minecraft-protocol": "^1.40.0",
    "ping": "^0.4.4",
    "source-server-query": "^1.0.1"
  },
  "build": {
    "appId": "com.example.server-monitor",
    "productName": "Server Monitor",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/electron/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.ico",
      "sign": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "forceCodeSigning": false
  }
}